@model db.Books

@{
    ViewBag.Title = "update1";
}

<h2>update3</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Books</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.BookId)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.BookId)
        @Html.ValidationMessageFor(model => model.BookId)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.AuthorName)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.AuthorName)
        @Html.ValidationMessageFor(model => model.AuthorName)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Price)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Price)
        @Html.ValidationMessageFor(model => model.Price)
    </div>
    <div>
        <img src="@Model.BookCoverUrl" style="height:80px;" />
        @Html.HiddenFor(a => a.BookCoverUrl)
        <input type="file" name="BookCoverUrl" />
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.BookType, db.bill.Book.getBookTypes())
    </div>
    <div class="editor-field">
        @Html.CheckBoxListFor(model => model.BookType, db.bill.Book.getBookTags())
    </div>


    <p>
        <input type="submit" value="Save" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("返回", "List", "Book")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
