@model db.Books

@{
    ViewBag.Title = "insert1";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>insert1</title>
    <link rel="stylesheet" href="~/css/list.css">
</head>
<h2>insert1</h2>

@using (Html.BeginForm("insert1", "zsg", FormMethod.Post, new { enctype = "multipart/form-data" })) { 
    @Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<fieldset>
    <legend>Books</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.AuthorName)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.AuthorName)
        @Html.ValidationMessageFor(model => model.AuthorName)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Title)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.Price)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Price)
        @Html.ValidationMessageFor(model => model.Price)
    </div>
    <div class="editor-field">
        <input type="file" name="BookCoverUrl" />
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.BookType, db.bill.Book.getBookTypes())
    </div>
    <div class="editor-field">
        @Html.CheckBoxListFor(model => model.BookTag, db.bill.Book.getBookTags())
    </div>
    <p>
        <input type="submit" value="Create" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("返回", "List", "Book")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
