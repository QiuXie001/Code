
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>jq01</title>
    <script src="/Content/scripts/jquery-1.12.4.js" type="text/javascript"></script>
    <style type="text/css">
        *{ padding:0px; margin:0px;}
        .jy01{
            width:310px;
            box-sizing:border-box;
            margin-left:auto;
            margin-right:auto;
            border:1pt solid black;
            overflow:hidden;
        }
            .jy01 li {
                float: left;
                width: 100px;
                list-style-type: none;
                box-sizing: border-box;
            }
            .jy01 div{
                text-align:center;
            }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".btn").click(function () {
                if ($(this).text() == "精简显示") {
                    $(".jy01 li:gt(8)").hide();
                    $(this).text('全部显示')
                }else
                {
                    $(".jy01 li").show();
                    $(this).text('精简显示')
                }
            });
        });
    </script>
</head>
<body>
    <div class="jy01">
        <ul>
