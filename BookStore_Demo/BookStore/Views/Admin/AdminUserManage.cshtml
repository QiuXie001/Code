@model IEnumerable<DBLibrary.Admin>

@{
    ViewBag.Title = "AdminUserManage";
}
@section css{
    <link rel="stylesheet" href="~/CSS/UseManage.css">
}
<body>
    <h2>AdminUserManage</h2>

    <div class="search">
        <ul>
            @using (Html.BeginForm("AdminSearch", "Admin", FormMethod.Post))
            {
                <li>
                    <span>用户名</span>
                    <input type="text" class="input" name="Id">
                </li>
                <li>
                    <span>电话号码</span>
                    <input type="text" class="input" name="Telephone">
                </li>
                <li class="search">
                    <button class="search" type="submit">
                        <span>查询</span>
                    </button>

                </li>
            }
            <li class="search">
                @using (Html.BeginForm("AdminAddView", "Admin", FormMethod.Get))
                {
                    <button class="search">
                        <span>@Html.ActionLink("新增", "AdminAddView", "Admin")</span>
                    </button>
                }
            </li>
            <li class="search">
                @using (Html.BeginForm("CustomUserManage", "Admin", FormMethod.Get))
                {
                    <button class="search" type="submit">
                        <span>切换顾客列表</span>
                    </button>
                }
            </li>
        </ul>
    </div>

    <div class="ManageList">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Id)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Password)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Age)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Telephone)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.IdentityID)</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="show">
                            <td scope="row">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Password)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telephone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdentityID)
                            </td>
                            <td>
                                <button class="operate">@Html.ActionLink("修改", "AdminUpdateView", "Admin", new { id = item.Id }, null)</button>
                                <button class="operate"> @Html.ActionLink("删除", "AdminDelete", "Admin", new { id = item.Id }, null)</button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('input').each(function () {
                if ($(this).val() != null && $(this).val() != "")
                    $(this).parent().find('span').addClass('havevalue')
                else
                    $(this).parent().find('span').removeClass('havevalue')
            })
            $(document).click(function (e) {

                var _con = $('input'); // 设置目标区域
                var i = 0;
                if (!_con.is(e.target) && _con.has(e.target).length === 0) {
                    $('input').each(function () {
                        if ($(this).val() != null && $(this).val() != "")
                            $(this).parent().find('span').addClass('havevalue')
                        else
                            $(this).parent().find('span').removeClass('havevalue')
                    })
                }
            })
            $('input').click(function (e) {
                $(this).parent().find('span').addClass('havevalue')
            })
        })
    </script>
}